#!/bin/bash

# The various escape codes that we can use to color our prompt.
        RED="\[\033[0;31m\]"
     YELLOW="\[\033[1;33m\]"
      GREEN="\[\033[0;32m\]"
       BLUE="\[\033[1;34m\]"
 LIGHT_GRAY="\[\033[0;37m\]"
 COLOR_NONE="\[\e[0m\]"

# Determine the branch/state information for this git repository.
function set_git_branch {
  # Capture the output of the "git status" command.
  git_status="$(git status 2> /dev/null)"

  # Set color based on clean/staged/dirty.
  if [[ ${git_status} =~ "Changes not staged for commit" ]]; then
    state="${RED}"
  elif [[ ${git_status} =~ "Changes to be committed" ]] || [[ ${git_status} =~ "Untracked files" ]]; then
    state="${YELLOW}"
  else
    state="${GREEN}"
  fi

  # Set arrow icon based on status against remote.
  remote_pattern="# Your branch is (ahead|behind)+ "
  if [[ ${git_status} =~ ${remote_pattern} ]]; then
    if [[ ${BASH_REMATCH[1]} == "ahead" ]]; then
      remote="↑"
    else
      remote="↓"
    fi
  else
    remote=""
  fi
  diverge_pattern="# Your branch and (.*) have diverged"
  if [[ ${git_status} =~ ${diverge_pattern} ]]; then
    remote="↕"
  fi

  # Get the name of the branch.
  branch="$(git rev-parse --abbrev-ref HEAD 2>/dev/null)"

  # Set the final branch string.
  printf "${state}(${branch})${remote}${COLOR_NONE}"
}

# Determine active Python virtualenv details.
function set_virtualenv () {
  printf "${BLUE}[$(basename ${VIRTUAL_ENV})]${COLOR_NONE}"
}

function set_k8s () {
  printf "${YELLOW}{$(kubectl config current-context 2> /dev/null)}${COLOR_NONE}"
}

# Set the full bash prompt.
function set_bash_prompt () {
  PS1=''

  git rev-parse --git-dir &> /dev/null \
    && PS1="$(set_git_branch) " \

  [ -n "$VIRTUAL_ENV" ] \
    && PS1="${PS1}$(set_virtualenv) "

  if [ -f ~/.kube/config ] || [ -n "$KUBECONFIG" ]; then
    PS1="${PS1}$(set_k8s) "
  fi

  if [ -n "$PS1" ]; then
    PS1="${PS1}${LIGHT_GRAY}\n\w${COLOR_NONE} \$ "
  else
    PS1="${LIGHT_GRAY}\w${COLOR_NONE} \$ "
  fi
}

# Tell bash to execute this function just before displaying its prompt.
PROMPT_COMMAND=set_bash_prompt
